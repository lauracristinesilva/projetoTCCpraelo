@model infinitysky.Models.Cliente;

@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}

<link rel="stylesheet" href="~/css/estilo.css" asp-append-version="true">



<h1>ENTRAR</h1>
<p>Escolha viajar com a melhor agência de intercâmbio do país</p>

<!-- Layout principal com duas colunas: uma para o formulário e outra para a imagem -->
<div class="container">
    <div class="form-container">
        <!-- Coluna da imagem -->
        <div class="img-content">
            <img class="imgfundo" src="/img/fundologin.png" alt="Imagem de avião" />
        </div>

        <!-- Coluna do formulário -->
        <div class="form-content">
            <article class="card-body">
                @if (ViewData["msg"] != null)
                {
                    @* O HTML Raw pode ser usado para: Procurar e baixar páginas HTML, Procurar e baixar cabeçalhos.*@
                    <p class="alert alert-danger">@Html.Raw(ViewData["msg"])</p>
                }

                <form method="post">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" type="email">
                    </div>
                    <div class="form-group">
                        <input asp-for="Senha" class="form-control" placeholder="Senha" type="password">
                    </div>
                    <h3>Ainda não tem cadastro? Cadastre-se!</h3>
                    <br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> ENTRAR </button>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>













